{
  "name": "ecoplate",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:backend": "cd backend && bun --watch src/index.ts",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:recommendation": "cd recommendation-engine && python app.py",
    "build": "cd frontend && bun run build",
    "start": "cd backend && bun run src/index.ts",
    "start:all": "powershell -File scripts/start-all.ps1",
    "stop:all": "powershell -File scripts/stop-all.ps1",
    "db:generate": "cd backend && bunx drizzle-kit generate",
    "db:migrate": "cd backend && bun run src/db/migrate.ts",
    "db:seed": "cd backend && bun run src/db/seed.ts"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/geolocation": "^8.0.0",
    "bun": "^1.3.7",
    "debug": "^4.4.3",
    "drizzle-kit": "^0.31.8",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "react-leaflet": "^5.0.0",
    "react-leaflet-cluster": "^4.0.0",
    "supports-color": "^10.2.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.21",
    "@types/leaflet.markercluster": "^1.5.6",
    "@vitest/ui": "^4.0.18",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.18"
  }
}
